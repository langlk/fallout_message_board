<div class="user-form-container">
  <div class="user-form">
    <h1>Sign in</h1>

    <%= form_tag '/sessions' do %>
      <div class="input-field">
        <%= label_tag :email %>
        <%= email_field_tag :email %>
      </div>
      <div class="input-field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div class="user-form-links">
        <%= submit_tag "Sign In", class: "button", id: "sign_in_button" %>
        <%= link_to "Sign Up", '/signup', class: "user-form-link" %>
      </div>
    <% end %>
  </div>
</div>
